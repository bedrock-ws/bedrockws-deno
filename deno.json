{
  "workspace": [
    "./src/bedrockws",
    "./src/bot",
    "./src/schema",
    "./src/ui"
  ],
  "tasks": {
    "doc": "deno doc --html --name='bedrockws-deno' --output=./docs/ ./src/**/*.ts",
    "doc:lint": "deno doc --lint ./src/**/*.ts"
  },
  "fmt": {
    "exclude": ["./src/bot/tests/expected_help_output/*.xml"]
  },
  "exclude": ["./manual"],
  "compilerOptions": {
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true
  }
}
